%h1.text-center.mb-4= t("tasks.list_tasks")

.row
  - @tasks.each do |task|
    .col-md-4.mb-3
      .card
        .card-header.bg-dark.text-white
          %h5.mb-0= task.name
        .card-body
          %p.card-text= task.description
          %p.card-text
            %strong Due date:
            = task.due_date
          %p.card-text
            %strong Category:
            = task.category.name
        .card-footer.text-end
          = link_to 'Show', task, class: 'btn btn-sm btn-primary me-1'
          = link_to 'Edit', edit_task_path(task), class: 'btn btn-sm btn-warning me-1'
          = button_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'

%br
= link_to 'New Task', new_task_path, class: 'btn btn-success'
